#include <iostream>
#include <vector>
#include <queue>
#include <climits>
using namespace std;

int main() {
    int N;
    cin >> N;
    
    vector<int> price(N + 1);
    for (int i = 1; i <= N; i++) {
        cin >> price[i];
    }
    
    int M;
    cin >> M;
    
    vector<vector<int>> graph(N + 1);
    
    for (int i = 0; i < M; i++) {
        int a, b;
        cin >> a >> b;
        graph[a].push_back(b);
        graph[b].push_back(a);
    }
    
    vector<int> dist(N + 1, INT_MAX);
    dist[1] = 0; // начинаем из города 1
    
    priority_queue<pair<int, int>, vector<pair<int, int>>, greater<pair<int, int>>> pq;
    pq.push({0, 1});
    
    while (!pq.empty()) {
        int current_cost = pq.top().first;
        int u = pq.top().second;
        pq.pop();
        
        if (current_cost > dist[u]) continue;
        
        for (int v : graph[u]) {
            int new_cost = dist[u] + price[u];
            
            if (new_cost < dist[v]) {
                dist[v] = new_cost;
                pq.push({dist[v], v});
            }
        }
    }
    
    if (dist[N] == INT_MAX) {
        cout << -1 << endl;
    } else {
        cout << dist[N] << endl;
    }
    
    return 0;
}
