#include <iostream>
#include <vector>
#include <map>
#include <string>

void showVec(const std::vector<float>& v) {
    std::cout << "Vec (" << v.size() << "): ";
    for (size_t i = 0; i < v.size(); i++) {
        std::cout << v[i];
        if (i < v.size() - 1) std::cout << ", ";
    }
    std::cout << std::endl;
}

class Settings {
private:
    static std::map<std::string, std::string> m;
    
public:
    static void Add(const std::string& k, const std::string& v) {
        m[k] = v;
        std::cout << "Add: " << k << "=" << v << std::endl;
    }
    
    static std::string Get(const std::string& k) {
        auto it = m.find(k);
        if (it != m.end()) {
            return it->second;
        }
        return "not found";
    }
    
    static void Print() {
        if (m.empty()) {
            std::cout << "Empty" << std::endl;
            return;
        }
        
        std::cout << "Settings:" << std::endl;
        for (const auto& p : m) {
            std::cout << "  " << p.first << " : " << p.second << std::endl;
        }
    }
    
    static void Clear() {
        m.clear();
        std::cout << "Cleared" << std::endl;
    }
};

std::map<std::string, std::string> Settings::m;

int main() {
    std::cout << "=== VECTOR ===" << std::endl;
    
    std::vector<float> v;
    
    v.push_back(1.1f);
    v.push_back(2.2f);
    v.push_back(3.3f);
    v.push_back(4.4f);
    v.push_back(5.5f);
    
    showVec(v);
    
    v.insert(v.begin() + 3, 9.9f);
    
    std::cout << "After insert: ";
    showVec(v);
    
    v.pop_back();
    
    std::cout << "After pop: ";
    showVec(v);
    
    std::cout << "\n=== SETTINGS ===" << std::endl;
    
    Settings::Clear();
    Settings::Add("theme", "dark");
    Settings::Add("lang", "ru");
    Settings::Add("sound", "on");
    
    Settings::Print();
    
    std::cout << "Get 'lang': " << Settings::Get("lang") << std::endl;
    std::cout << "Get 'xxx': " << Settings::Get("xxx") << std::endl;
    
    Settings::Add("sound", "off");
    Settings::Print();
    
    Settings::Add("width", "800");
    Settings::Add("height", "600");
    
    Settings::Print();
    
    std::cout << "\n=== VECTOR EXTRA ===" << std::endl;
    
    std::cout << "Size: " << v.size() << std::endl;
    std::cout << "First: " << v.front() << std::endl;
    std::cout << "Last: " << v.back() << std::endl;
    
    v[1] = 22.22f;
    std::cout << "After change: ";
    showVec(v);
    
    return 0;
}
