#include <iostream>
#include <vector>
#include <algorithm>
#include <climits>
using namespace std;

struct Box {
    int weight;
    int capacity;
};

bool compare_boxes(const Box& a, const Box& b) {
    if (a.capacity == b.capacity) {
        return a.weight < b.weight;
    }
    return a.capacity < b.capacity;
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
    int n;
    cin >> n;
    
    vector<Box> boxes(n);
    for (int i = 0; i < n; i++) {
        cin >> boxes[i].weight >> boxes[i].capacity;
    }
    
    sort(boxes.begin(), boxes.end(), compare_boxes);
    
    vector<long long> dp(n + 1, LLONG_MAX);
    dp[0] = 0;
    
    for (int i = 0; i < n; i++) {
        for (int j = n - 1; j >= 0; j--) {
            if (dp[j] != LLONG_MAX && dp[j] <= boxes[i].capacity) {
                dp[j + 1] = min(dp[j + 1], dp[j] + boxes[i].weight);
            }
        }
    }
    
    int max_count = 0;
    for (int i = n; i >= 0; i--) {
        if (dp[i] != LLONG_MAX) {
            max_count = i;
            break;
        }
    }
    
    cout << max_count << endl;
    
    return 0;
}
