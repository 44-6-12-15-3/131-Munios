#include <iostream>
using namespace std;

class Weapon {
public:
    virtual void Attack() = 0;
};

class MagicWeapon : public Weapon {
public:
    void Attack() override {
        cout << "Атакуем магическим оружием" << endl;
    }
};

class DisposableWeapon : public Weapon {
private:
    bool used = false;
    
public:
    void Attack() override {
        if (used) {
            cout << "Оружие уже было использовано" << endl;
        } else {
            cout << "Атакуем одноразовым оружием" << endl;
            used = true;
        }
    }
};

template <typename T1, typename T2>
class DualWeapons {
private:
    T1 leftHand;
    T2 rightHand;
    
public:
    DualWeapons(T1 left, T2 right) : leftHand(left), rightHand(right) {}
    
    T1 getLeft() { return leftHand; }
    T2 getRight() { return rightHand; }
    
    void setLeft(T1 weapon) { leftHand = weapon; }
    void setRight(T2 weapon) { rightHand = weapon; }
};

int main() {
    MagicWeapon wand;
    wand.Attack();
    
    DisposableWeapon knife;
    knife.Attack();
    knife.Attack();
    
    MagicWeapon wand1, wand2;
    DualWeapons<MagicWeapon, MagicWeapon> dualWands(wand1, wand2);
    dualWands.getLeft().Attack();
    
    DualWeapons<int, int> dualIds(100, 200);
    cout << "Левая: " << dualIds.getLeft() << endl;
    cout << "Правая: " << dualIds.getRight() << endl;
    
    return 0;
}
