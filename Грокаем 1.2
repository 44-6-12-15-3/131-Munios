#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

void Sort(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int maxIndex = i;
        for (int j = i + 1; j < n; j++) {
            if (arr[j] > arr[maxIndex]) {
                maxIndex = j;
            }
        }
        int temp = arr[i];
        arr[i] = arr[maxIndex];
        arr[maxIndex] = temp;
    }
}

void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main() {
    srand(time(0));
    
    const int SIZE = 10;
    int arr[SIZE];
    
    cout << "Исходный массив: ";
    for (int i = 0; i < SIZE; i++) {
        arr[i] = rand() % 101; // 0-100
        cout << arr[i] << " ";
    }
    cout << endl;
    
    Sort(arr, SIZE);

    cout << "Отсортированный массив (по убыванию): ";
    printArray(arr, SIZE);
    
    return 0;
}
