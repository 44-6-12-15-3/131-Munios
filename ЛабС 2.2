#include <iostream>

int main() {
    int n;
    
    while (true) {
        std::cout << "Введите целое положительное число: ";
        std::cin >> n;
        
        if (n > 0) {
            break;
        }
        std::cout << "Ошибка: число должно быть положительным!\n";
    }
    
    int total = 0;
    std::cout << "\nСумма чисел от 1 до " << n << ":\n";
    
    for (int i = 1; i <= n; i++) {
        total += i;
        std::cout << i;
        if (i < n) std::cout << " + ";
    }
    std::cout << " = " << total << "\n\n";
    
    int arr[10] = {2, 5, 8, 12, 17, 21, 30, 35, 40, 45};
    
    std::cout << "Массив: ";
    for (int i = 0; i < 10; i++) {
        std::cout << arr[i] << " ";
    }
    std::cout << "\n\n";
    
    std::cout << "Элементы на четных позициях (0, 2, 4, 6, 8): ";
    for (int i = 0; i < 10; i++) {
        if (i % 2 == 0) {
            std::cout << arr[i] << " ";
        }
    }
    std::cout << "\n\n";
    
    int sumOddPos = 0;
    std::cout << "Элементы на нечетных позициях (1, 3, 5, 7, 9): ";
    for (int i = 0; i < 10; i++) {
        if (i % 2 == 1) {
            std::cout << arr[i] << " ";
            sumOddPos += arr[i];
        }
    }
    std::cout << "\nСумма элементов на нечетных позициях: " << sumOddPos << std::endl;
    
    return 0;
}
